{
  "name": "agent-basic-js",
  "version": "0.1.0",
  "description": "A basic Javascript agent",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "generator": "agent-basic-js"
  },
  "inputs": {
    "name": {
      "type": "string",
      "prompt": "Project name:",
      "default": "{{.dir}}",
      "format": ".+"
    },
    "description": {
      "type": "string",
      "prompt": "Project description:",
      "default": "A basic Javascript agent.",
      "format": ".+"
    },
    "author": {
      "type": "string",
      "prompt": "Your name:",
      "default": "{{.author}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "year": {
      "type": "string",
      "prompt": "Year:",
      "default": "{{now `2006`}}",
      "format": ".+"
    },
    "developmentStore": {
      "type": "select:string",
      "prompt": "Development store:",
      "default": "stratumn/filestore",
      "options": [{
        "input": "1",
        "value": "stratumn/filestore",
        "text": "Stratumn File Store"
      }, {
        "input": "2",
        "value": "stratumn/dummystore",
        "text": "Stratumn Dummy Store (in memory)"
      }, {
        "input": "3",
        "value": "stratumn/postgresstore",
        "text": "Stratumn PostgreSQL Store (license required)"
      }, {
        "input": "4",
        "value": "stratumn/rethinkstore",
        "text": "Stratumn RethinkDB Store (license required)"
      }]
    },
    "developmentFossilizer": {
      "type": "select:string",
      "prompt": "Development fossilizer:",
      "default": "stratumn/dummyfossilizer",
      "options": [{
        "input": "1",
        "value": "stratumn/dummyfossilizer",
        "text": "Stratumn Dummy Fossilizer"
      }, {
        "input": "2",
        "value": "stratumn/dummybatchfossilizer",
        "text": "Stratumn Dummy Batch Fossilizer"
      }, {
        "input": "3",
        "value": "stratumn/btcfossilizer",
        "text": "Stratumn Bitcoin Fossilizer (license required)"
      }]
    },
    "developmentFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for development:",
      "format": ".+"
    },
    "testFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for tests:",
      "format": ".+"
    },
    "useGit": {
      "type": "select:string",
      "prompt": "Initialize a Git repository (requires Git)",
      "default": "n",
      "options": [{
        "input": "y",
        "value": "y",
        "text": "Yes"
      }, {
        "input": "n",
        "value": "n",
        "text": "No"
      }]
    }
  },
  "priorities": [
    "package.json",
    "LICENSE",
    "docker-compose.yml"
  ]
}
