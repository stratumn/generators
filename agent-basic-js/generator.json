{
  "name": "agent-basic-js",
  "version": "0.2.0",
  "description": "A basic Javascript agent",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "generator": "agent-basic-js",
    "agentdev": "indigoframework/agent-js:dev-alpine-0.2.0-3",
    "agentui": "indigoframework/agent-ui:0.2.0-3",
    "tmpopexplorer": "indigoframework/tmpop-explorer:0.2.0-3",
    "filetmpop": "indigoframework/filetmpop:0.2.0-rc1",
    "dummytmpop": "indigoframework/dummytmpop:0.2.0-rc1",
    "postgrestmpop": "indigoframework/postgrestmpop:0.2.0-rc1",
    "rethinktmpop": "indigoframework/rethinktmpop:0.2.0-rc1",
    "tmstore": "indigoframework/tmstore:0.2.0-rc1",
    "fabricstore": "indigoframework/fabricstore:0.2.0-rc1",
    "filestore": "indigoframework/filestore:0.2.0-rc1",
    "dummystore": "indigoframework/dummystore:0.2.0-rc1",
    "couchstore": "indigoframework/couchstore:0.2.0-rc1",
    "postgresstore": "indigoframework/postgresstore:0.2.0-rc1",
    "rethinkstore": "indigoframework/rethinkstore:0.2.0-rc1",
    "dummyfossilizer": "indigoframework/dummyfossilizer:0.2.0-rc1",
    "dummybatchfossilizer": "indigoframework/dummybatchfossilizer:0.2.0-rc1",
    "btcfossilizer": "indigoframework/btcfossilizer:0.2.0-rc1",
    "couchdb": "couchdb:2.1",
    "postgres": "postgres:10.1",
    "rethinkdb": "rethinkdb:2.3"
  },
  "filename-substitutions": {
    "PROCESS": "process"
  },
  "inputs": {
    "name": {
      "type": "string",
      "prompt": "Project name:",
      "default": "{{.dir}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "description": {
      "type": "string",
      "prompt": "Project description:",
      "default": "A basic Javascript agent.",
      "format": ".+"
    },
    "process": {
      "type": "slice:string",
      "prompt": "List of process names:",
      "default": "{{.process}}",
      "format": "^[a-zA-Z].*$",
      "separator": ","
    },
    "author": {
      "type": "string",
      "prompt": "Your name:",
      "default": "{{.fullName}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "year": {
      "type": "string",
      "prompt": "Year:",
      "default": "{{now `2006`}}",
      "format": ".+"
    },
    "dockerorg": {
      "type": "string",
      "prompt": "Docker organization or user (to push images):",
      "default": "{{.dockerorg}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "developmentStore": {
      "type": "select:string",
      "prompt": "Development store:",
      "default": "filetmpop",
      "options": [
        {
          "input": "1",
          "value": "filetmpop",
          "text": "Indigo's Tendermint Node With File Store"
        },
        {
          "input": "2",
          "value": "dummytmpop",
          "text": "Indigo's Tendermint Node With Dummy Store"
        },
        {
          "input": "3",
          "value": "postgrestmpop",
          "text": "Indigo's Tendermint Node With PostgreSQL Store"
        },
        {
          "input": "4",
          "value": "rethinktmpop",
          "text": "Indigo's Tendermint Node With RethinkDB Store"
        },
        {
          "input": "5",
          "value": "fabricstore",
          "text": "Hyperledger Fabric Node"
        },
        {
          "input": "6",
          "value": "filestore",
          "text": "Indigo's File Store"
        },
        {
          "input": "7",
          "value": "dummystore",
          "text": "Indigo's Dummy Store (in memory)"
        },
        {
          "input": "8",
          "value": "postgresstore",
          "text": "Indigo's PostgreSQL Store"
        },
        {
          "input": "9",
          "value": "rethinkstore",
          "text": "Indigo's RethinkDB Store"
        },
        {
          "input": "10",
          "value": "couchstore",
          "text": "Indigo's CouchDB Store"
        }
      ]
    },
    "developmentFossilizer": {
      "type": "selectmulti:string",
      "prompt": "List of development fossilizers:",
      "separator": ",",
      "isRequired": false,
      "options": [
        {
          "input": "1",
          "value": "dummyfossilizer",
          "text": "Indigo's Dummy Fossilizer"
        },
        {
          "input": "2",
          "value": "dummybatchfossilizer",
          "text": "Indigo's Dummy Batch Fossilizer"
        },
        {
          "input": "3",
          "value": "btcfossilizer",
          "text": "Indigo's Bitcoin Fossilizer"
        }
      ]
    },
    "developmentFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for development:",
      "format": ".+"
    },
    "testFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for tests:",
      "format": ".+"
    },
    "useGit": {
      "type": "select:string",
      "prompt": "Initialize a Git repository (requires Git)",
      "default": "n",
      "options": [
        {
          "input": "y",
          "value": "y",
          "text": "Yes"
        },
        {
          "input": "n",
          "value": "n",
          "text": "No"
        }
      ]
    }
  },
  "priorities": ["agent/package.json", "LICENSE", "docker-compose.yml"]
}
