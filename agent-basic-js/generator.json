{
  "name": "agent-basic-js",
  "version": "0.1.0",
  "description": "A basic Javascript agent",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "generator": "agent-basic-js"
  },
  "inputs": {
    "name": {
      "type": "string",
      "prompt": "Project name:",
      "default": "{{.dir}}",
      "format": ".+"
    },
    "description": {
      "type": "string",
      "prompt": "Project description:",
      "default": "A basic Javascript agent.",
      "format": ".+"
    },
    "author": {
      "type": "string",
      "prompt": "Your name:",
      "default": "{{.fullName}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "year": {
      "type": "string",
      "prompt": "Year:",
      "default": "{{now `2006`}}",
      "format": ".+"
    },
    "developmentStore": {
      "type": "select:string",
      "prompt": "Development store:",
      "default": "stratumn/filestore:0.0.1-dev",
      "options": [{
        "input": "1",
        "value": "stratumn/filestore:0.0.1-dev",
        "text": "Stratumn File Store v0.0.1-dev"
      }, {
        "input": "2",
        "value": "stratumn/dummystore:0.0.1-dev",
        "text": "Stratumn Dummy Store v0.0.1-dev (in memory)"
      }, {
        "input": "3",
        "value": "stratumn/postgresstore:0.0.1-dev",
        "text": "Stratumn PostgreSQL Store v0.0.1-dev (license required)"
      }, {
        "input": "4",
        "value": "stratumn/rethinkstore:0.0.1-dev",
        "text": "Stratumn RethinkDB Store v0.0.1-dev (license required)"
      }]
    },
    "developmentFossilizer": {
      "type": "select:string",
      "prompt": "Development fossilizer:",
      "default": "stratumn/dummyfossilizer:0.0.1-dev",
      "options": [{
        "input": "1",
        "value": "stratumn/dummyfossilizer:0.0.1-dev",
        "text": "Stratumn Dummy Fossilizer v0.0.1-dev"
      }, {
        "input": "2",
        "value": "stratumn/dummybatchfossilizer:0.0.1-dev",
        "text": "Stratumn Dummy Batch Fossilizer v0.0.1-dev"
      }, {
        "input": "3",
        "value": "stratumn/btcfossilizer",
        "text": "Stratumn Bitcoin Fossilizer v0.0.1-dev (license required)"
      }]
    },
    "developmentFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for development:",
      "format": ".+"
    },
    "testFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for tests:",
      "format": ".+"
    },
    "useGit": {
      "type": "select:string",
      "prompt": "Initialize a Git repository (requires Git)",
      "default": "n",
      "options": [{
        "input": "y",
        "value": "y",
        "text": "Yes"
      }, {
        "input": "n",
        "value": "n",
        "text": "No"
      }]
    }
  },
  "priorities": [
    "package.json",
    "LICENSE",
    "docker-compose.yml"
  ]
}
