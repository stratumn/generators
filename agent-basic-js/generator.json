{
  "name": "agent-basic-js",
  "version": "0.1.0",
  "description": "A basic Javascript agent",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "generator": "agent-basic-js",
    "agentdev": "stratumn/agent-js:dev-alpine-v0.18.0",
    "agentui": "stratumn/agent-ui:v0.5.0",
    "indigoexplorer": "stratumn/indigo-explorer:v0.8.0",
    "filetmpop": "stratumn/filetmpop:0.1.0",
    "tmstore": "stratumn/tmstore:0.1.0",
    "fabricstore": "stratumn/fabricstore",
    "filestore": "stratumn/filestore:0.1.0",
    "dummystore": "stratumn/dummystore:0.1.0",
    "postgresstore": "stratumn/postgresstore:0.1.0",
    "rethinkstore": "stratumn/rethinkstore:0.1.0",
    "dummyfossilizer": "stratumn/dummyfossilizer:0.1.0",
    "dummybatchfossilizer": "stratumn/dummybatchfossilizer:0.1.0",
    "btcfossilizer": "stratumn/btcfossilizer:0.1.0",
    "postgres": "postgres:9.6.0",
    "rethink": "rethinkdb:2.0.4"
  },
  "filename-substitutions": {
    "PROCESS": "process"
  },
  "inputs": {
    "name": {
      "type": "string",
      "prompt": "Project name:",
      "default": "{{.dir}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "description": {
      "type": "string",
      "prompt": "Project description:",
      "default": "A basic Javascript agent.",
      "format": ".+"
    },
    "process": {
      "type": "slice:string",
      "prompt": "List of process names:",
      "default": "{{.process}}",
      "format": "^[a-zA-Z].*$",
      "separator": ","
    },
    "author": {
      "type": "string",
      "prompt": "Your name:",
      "default": "{{.fullName}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "year": {
      "type": "string",
      "prompt": "Year:",
      "default": "{{now `2006`}}",
      "format": ".+"
    },
    "dockerorg": {
      "type": "string",
      "prompt": "Docker organization or user (to push images):",
      "default": "{{.dockerorg}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "developmentStore": {
      "type": "select:string",
      "prompt": "Development store:",
      "default": "tmstore",
      "options": [
        {
          "input": "1",
          "value": "tmstore",
          "text": "Stratumn Indigo Node With File Store"
        },
        {
          "input": "2",
          "value": "fabricstore",
          "text": "Stratumn Indigo Node With Fabric Store"
        },
        {
          "input": "3",
          "value": "filestore",
          "text": "Stratumn File Store"
        },
        {
          "input": "4",
          "value": "dummystore",
          "text": "Stratumn Dummy Store (in memory)"
        },
        {
          "input": "5",
          "value": "postgresstore",
          "text": "Stratumn PostgreSQL Store (license required)"
        },
        {
          "input": "6",
          "value": "rethinkstore",
          "text": "Stratumn RethinkDB Store (license required)"
        }
      ]
    },
    "developmentFossilizer": {
      "type": "selectmulti:string",
      "prompt": "List of development fossilizers:",
      "separator": ",",
      "isRequired": false,
      "options": [
        {
          "input": "1",
          "value": "dummyfossilizer",
          "text": "Stratumn Dummy Fossilizer"
        },
        {
          "input": "2",
          "value": "dummybatchfossilizer",
          "text": "Stratumn Dummy Batch Fossilizer (license required)"
        },
        {
          "input": "3",
          "value": "btcfossilizer",
          "text": "Stratumn Bitcoin Fossilizer (license required)"
        }
      ]
    },
    "developmentFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for development:",
      "format": ".+"
    },
    "testFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for tests:",
      "format": ".+"
    },
    "useGit": {
      "type": "select:string",
      "prompt": "Initialize a Git repository (requires Git)",
      "default": "n",
      "options": [
        {
          "input": "y",
          "value": "y",
          "text": "Yes"
        },
        {
          "input": "n",
          "value": "n",
          "text": "No"
        }
      ]
    }
  },
  "priorities": ["agent/package.json", "LICENSE", "docker-compose.yml"]
}
