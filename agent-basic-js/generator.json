{
  "name": "agent-basic-js",
  "version": "0.1.0",
  "description": "A basic Javascript agent",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "generator": "agent-basic-js",
    "agentdev": "stratumn/agent-js:dev-alpine-v0.12.4",
    "agentui": "stratumn/agent-ui:v0.2.3",
    "filestore": "stratumn/filestore:0.0.2-dev",
    "dummystore": "stratumn/dummystore:0.0.2-dev",
    "postgresstore": "stratumn/postgresstore:0.0.1-dev",
    "rethinkstore": "stratumn/rethinkstore:0.0.1-dev",
    "dummyfossilizer": "stratumn/dummyfossilizer:0.0.2-dev",
    "dummybatchfossilizer": "stratumn/dummybatchfossilizer:0.0.1-dev",
    "btcfossilizer": "stratumn/btcfossilizer:0.0.1-dev",
    "postgres": "postgres:9.6.0",
    "rethink": "rethinkdb:2.0.4"
  },
  "inputs": {
    "name": {
      "type": "string",
      "prompt": "Project name:",
      "default": "{{.dir}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "description": {
      "type": "string",
      "prompt": "Project description:",
      "default": "A basic Javascript agent.",
      "format": ".+"
    },
    "author": {
      "type": "string",
      "prompt": "Your name:",
      "default": "{{.fullName}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "year": {
      "type": "string",
      "prompt": "Year:",
      "default": "{{now `2006`}}",
      "format": ".+"
    },
    "dockerorg": {
      "type": "string",
      "prompt": "Docker organization or user (to push images):",
      "default": "{{.dockerorg}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "developmentStore": {
      "type": "select:string",
      "prompt": "Development store:",
      "default": "filestore",
      "options": [{
        "input": "1",
        "value": "filestore",
        "text": "Stratumn File Store"
      }, {
        "input": "2",
        "value": "dummystore",
        "text": "Stratumn Dummy Store (in memory)"
      }, {
        "input": "3",
        "value": "postgresstore",
        "text": "Stratumn PostgreSQL Store (license required)"
      }, {
        "input": "4",
        "value": "rethinkstore",
        "text": "Stratumn RethinkDB Store (license required)"
      }]
    },
    "developmentFossilizer": {
      "type": "select:string",
      "prompt": "Development fossilizer:",
      "default": "dummyfossilizer",
      "options": [{
        "input": "1",
        "value": "dummyfossilizer",
        "text": "Stratumn Dummy Fossilizer"
      }, {
        "input": "2",
        "value": "dummybatchfossilizer",
        "text": "Stratumn Dummy Batch Fossilizer (license required)"
      }, {
        "input": "3",
        "value": "btcfossilizer",
        "text": "Stratumn Bitcoin Fossilizer (license required)"
      }]
    },
    "developmentFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for development:",
      "format": ".+"
    },
    "testFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for tests:",
      "format": ".+"
    },
    "useGit": {
      "type": "select:string",
      "prompt": "Initialize a Git repository (requires Git)",
      "default": "n",
      "options": [{
        "input": "y",
        "value": "y",
        "text": "Yes"
      }, {
        "input": "n",
        "value": "n",
        "text": "No"
      }]
    }
  },
  "priorities": [
    "agent/package.json",
    "LICENSE",
    "docker-compose.yml"
  ]
}
