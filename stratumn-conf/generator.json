{
  "name": "stratumn-conf",
  "version": "0.1.0-dev",
  "description": "A Stratumn configuration",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "dir": "{{.dir}}"
  },
  "inputs": {
    "fullName": {
      "type": "string",
      "prompt": "Your full name:",
      "default": "{{.fullName}}",
      "format": ".+"
    },
    "email": {
      "type": "string",
      "prompt": "Email:",
      "default": "{{.email}}",
      "format": ".+"
    },
    "company": {
      "type": "string",
      "prompt": "Company:",
      "default": "{{.company}}",
      "format": ".+"
    },
    "sendUsageInfo": {
      "type": "select:string",
      "prompt": "Send usage information to help us improve our products:",
      "default": "y",
      "options": [{
        "input": "y",
        "value": "y",
        "text": "Yes"
      }, {
        "input": "n",
        "value": "n",
        "text": "No"
      }]
    },
    "sendCrashReports": {
      "type": "select:string",
      "prompt": "Send crash reports to help us fix bugs:",
      "default": "y",
      "options": [{
        "input": "y",
        "value": "y",
        "text": "Yes"
      }, {
        "input": "n",
        "value": "n",
        "text": "No"
      }]
    }
  },
  "priorities": [
    "variables.json",
    "config.json"
  ]
}
