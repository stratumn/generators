{
  "name": "cluster",
  "version": "0.3.0",
  "description": "An Indigo Tendermint cluster",
  "author": "Stratumn",
  "license": "Apache-2.0",
  "variables": {
    "generator": "cluster",
    "agentsample": "indigocore/agent-sample:0.3.0",
    "agentui": "indigocore/agent-ui:0.3.0",
    "tmpopexplorer": "indigocore/tmpop-explorer:0.3.0",
    "filetmpop": "indigocore/filetmpop:0.3.0",
    "dummytmpop": "indigocore/dummytmpop:0.3.0",
    "postgrestmpop": "indigocore/postgrestmpop:0.3.0",
    "rethinktmpop": "indigocore/rethinktmpop:0.3.0",
    "elasticsearchtmpop": "indigocore/elasticsearchtmpop:0.3.0",
    "tmstore": "indigocore/tmstore:0.3.0",
    "dummyfossilizer": "indigocore/dummyfossilizer:0.3.0",
    "dummybatchfossilizer": "indigocore/dummybatchfossilizer:0.3.0",
    "btcfossilizer": "indigocore/btcfossilizer:0.3.0",
    "postgres": "postgres:10.1",
    "rethinkdb": "rethinkdb:2.3",
    "elasticsearch": "docker.elastic.co/elasticsearch/elasticsearch:6.2.3"
  },
  "inputs": {
    "author": {
      "type": "string",
      "prompt": "Your name",
      "default": "{{.fullName}}",
      "format": ".+"
    },
    "tmpopUnderlyingStore": {
      "type": "select:string",
      "prompt": "Tendermint underlying store",
      "default": "filetmpop",
      "options": {
        "filetmpop": "Indigo's File Store",
        "dummytmpop": "Indigo's Dummy Store",
        "postgrestmpop": "Indigo's PostgreSQL Store",
        "rethinktmpop": "Indigo's RethinkDB Store",
        "elasticsearchtmpop": "Indigo's ElasticSearch Store"
      }
    },
    "clusterSize": {
      "type": "int",
      "prompt": "Number of nodes in the cluster",
      "default": 4
    },
    "developmentFossilizer": {
      "type": "selectmulti:string",
      "prompt": "List of development fossilizers",
      "isRequired": false,
      "options": {
        "dummyfossilizer": "Indigo's Dummy Fossilizer",
        "dummybatchfossilizer": "Indigo's Dummy Batch Fossilizer",
        "btcfossilizer": "Indigo's Bitcoin Fossilizer"
      }
    },
    "developmentFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for development",
      "format": ".+"
    },
    "testFossilizerWIF": {
      "type": "string",
      "prompt": "Bitcoin Wallet Import Format key for tests",
      "format": ".+"
    },
    "dockerorg": {
      "type": "string",
      "prompt": "Docker organization or user (to build images)",
      "default": "{{.dockerorg}}",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "useGit": {
      "type": "select:string",
      "prompt": "Initialize a Git repository (requires Git)",
      "default": "n",
      "options": {
        "y": "Yes",
        "n": "No"
      }
    },
    "monitoring": {
      "type": "select:string",
      "prompt": "Setup monitoring",
      "default": "false",
      "options": {
        "true": "Yes",
        "false": "No"
      }
    }
  },
  "priorities": ["LICENSE", "docker-compose.yml"]
}
